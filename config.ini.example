# Copy this file to config.ini and replace the placeholders with your actual values
# API_KEY and API_SECRET are obtained from your Alpaca account

[MAIN]
HISTORICAL_PERIOD = 1500
SYMBOLS = CRM, MSFT, AMZN, GOOGL, META, TSLA, NVDA, TSM, BABA, AMD, BNG, ROG, PFE, SIX, JNJ, OPEN, PLTR, CRWD, DDOG, CERS
END_DATE_OFFSET = 30
INCREASE_ALLOCATION = 1.1
DECREASE_ALLOCATION = 0.9

[ALPACA]
API_KEY = YOUR_ALPACA_API_KEY
API_SECRET = YOUR_ALPACA_API_SECRET

[STRATEGY]
SHORT_WINDOW = 5
LONG_WINDOW = 20

[RISK_MANAGEMENT]
RISK_PERCENTAGE = 0.02

[PORTFOLIO_OPTIMIZATION]
RISK_FREE_RATE = 0.03